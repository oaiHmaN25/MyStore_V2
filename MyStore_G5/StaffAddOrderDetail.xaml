<Window x:Class="MyStore_G5.StaffAddOrderDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStore_G5"
        mc:Ignorable="d"
        Title="StaffAddOrderDetail" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Category:" Margin="0,0,0,10"/>
            <ComboBox Name="comboBoxCategory" SelectionChanged="ComboBoxCategory_SelectionChanged" Margin="0,0,0,20"/>

            <TextBlock Text="Product:" Margin="0,0,0,10"/>
            <ComboBox Name="comboBoxProduct" SelectionChanged="ComboBoxProduct_SelectionChanged" Margin="0,0,0,20"/>

            <TextBlock Text="Quantity:" Margin="0,0,0,10"/>
            <TextBox Name="textBoxQuantity" Margin="0,0,0,20"/>

            <TextBlock Text="Unit Price:" Margin="0,0,0,10"/>
            <TextBox Name="textBoxUnitPrice" Margin="0,0,0,20" IsEnabled="False"/>

            <Button Content="Save" Width="100" HorizontalAlignment="Right" Click="Button_Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
