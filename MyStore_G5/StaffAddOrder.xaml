<Window x:Class="MyStore_G5.StaffAddOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStore_G5"
        mc:Ignorable="d"
        Title="StaffAddOrder" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Order Date:" Margin="0,0,0,10"/>
            <DatePicker Name="datePickerOrderDate" Margin="0,0,0,20"/>
            <TextBlock Text="Staff ID:" Margin="0,0,0,10"/>
            <TextBox Name="textBoxStaffId" Margin="0,0,0,20"/>
            <Button Content="Save" Width="100" HorizontalAlignment="Right" Click="Button_Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
